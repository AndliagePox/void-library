<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>

    <package name="accountApi" namespace="/api/account" extends="json-default">
        <action name="login" class="accountAction" method="login">
            <result name="success" type="json">
                <param name="root">jsonMap</param>
            </result>
        </action>

        <action name="reg" class="accountAction" method="reg">
            <result name="success" type="json">
                <param name="root">jsonMap</param>
            </result>
        </action>

        <action name="logout" class="accountAction" method="logout">
            <result name="success" type="json">
                <param name="root">jsonMap</param>
            </result>
        </action>
    </package>

    <package name="userApi" namespace="/api/user" extends="json-default">
        <action name="cur" class="userAction" method="cur">
            <result name="success" type="json">
                <param name="root">jsonMap</param>
            </result>
        </action>
    </package>

    <package name="bookApi" namespace="/api/book" extends="json-default">
        <action name="list" class="bookAction" method="list">
            <result name="success" type="json">
                <param name="root">jsonMap</param>
            </result>
        </action>
    </package>

    <package name="index" namespace="/" extends="struts-default">
        <default-action-ref name="index"/>
        <action name="index" class="com.opensymphony.xwork2.ActionSupport">
            <result name="success">
                /WEB-INF/index.html
            </result>
        </action>
    </package>
</struts>